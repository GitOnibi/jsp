<sql:query var="rs" dataSource="jdbc/OracleDB">
	SELECT MAX(idx) AS mIdx FROM board;
</sql:query>
<c:forEach var="row" items="${ rs.rows }">
	<c:set var="idx" value="${ row.mIdx + 1 }" />
</c:forEach>

