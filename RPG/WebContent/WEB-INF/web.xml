<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>RPG</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <filter>
    <filter-name>CharEncodingFilter</filter-name>
    <filter-class>com.filter.CharEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>CharEncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>Main_servlet</servlet-name>
    <servlet-class>com.controller.Main_servlet</servlet-class>
    <init-param>
      <param-name>ConfigFile</param-name>
      <param-value>C:\Users\105\eclipse-workspace\RPG\WebContent\WEB-INF\cmd.properties</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
  	<servlet-name>Main_servlet</servlet-name>
  	<url-pattern>*.do</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ConnectionPool</servlet-name>
    <servlet-class>com.control.Connection_Pool</servlet-class>
    <load-on-startup>2</load-on-startup>
  </servlet>
</web-app>